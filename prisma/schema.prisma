generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String 
  tasks     Task[]
  projects  Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user") // Map model to table name "user"
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  userId      Int
  status      String   @default("pendente")
  user        User     @relation(fields: [userId], references: [id])

  @@map("task") // Map model to table name "task"
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  tarefas   Tarefa[]

  @@map("project") // Map model to table name "project"
}

model Tarefa {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  status      String   
  projectId   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  project     Project   @relation(fields: [projectId], references: [id])

  @@map("tarefa") // Map model to table name "tarefa"
}
