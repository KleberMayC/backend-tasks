datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String 
  tasks     Task[]
  projects  Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  userId      Int
  status    String   @default("pendente")
  user        User     @relation(fields: [userId], references: [id])
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  tarefas     Tarefas[]
}

model Tarefas {
  id        Int       @id @default(autoincrement())
  name      String
  description String
  status    String   
  projectId Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   Project   @relation(fields: [projectId], references: [id])
}